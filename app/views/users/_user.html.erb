<% @users.each do |user| %>
  <li>
    <%= gravatar_for user, size: Settings.user.size_avatar %>
    <%= link_to user.name, user %>
    <% if current_user.admin? && current_user %>
      | <%= link_to t(".delete"), user, method: :delete,
      data: { confirm: t(".sure") } %>
    <% end %>
  </li>
<% end %>
